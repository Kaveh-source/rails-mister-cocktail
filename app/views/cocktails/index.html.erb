<div class="banner">
  <div class="container">
    <h1><strong>Cocktails for you!</strong></h1>
  </div>
  <div class="container">
  <div><%= link_to 'Add a cocktail', new_cocktail_path %></div>
  </div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |c| %>
    <div class="col-4">
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src='<%= cloudinary_url c.photo %>' alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= c.name %></h5>
            <%= link_to 'See details', cocktail_path(c)  %>
          </div>
        </div>
      </div>
    <% end %>
</div>
</div>
