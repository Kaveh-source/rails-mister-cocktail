<div class="container mt-3" id="cocktail-list">

  <h3 class="mb-3"><%= @cocktail.name %></h3>
  <%= link_to 'Delete this cocktail', cocktail_path(@cocktail), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger'%>
  <div class="row">
<div class="col">
      <div class="card mb-3">
       <%= cl_image_tag @cocktail.photo %>
      </div>
    </div>
    <div class="col">
      <div class="container">
        <h5 class="card-title">Ingredients</h5>
        <% @cocktail.doses.each do |dose| %>
        <div class="card mb-3">
            <div class="card-body">
              <%= dose.description %> <%= dose.ingredient.name %>
              <%= link_to 'delete', dose_path(dose), method: :delete, data: {confirm: 'Are you sure?'}, class: 'far fa-trash-alt'%>

            </div>
          </div>
          <% end %>

            <p><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %></p>

      </div>
    </div>
</div>
</div>

