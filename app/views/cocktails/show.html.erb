  <div class="container">
    <h1><%= link_to 'back', cocktails_path%><%= @cocktail.name %></h4>
      <% @cocktail.doses.each do |dose| %>
        <div class="card">
           <p><%= dose.description %> <%= dose.ingredient.name %>
              <%= link_to 'delete', dose_path(dose), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger'%>
             </p>
        </div>
      <% end %>
  <p><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %></p>
</div>




